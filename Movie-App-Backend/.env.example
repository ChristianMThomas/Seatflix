# Server Configuration
# Railway will set PORT automatically - only set this for local development
# PORT=8080

# Database Configuration
#
# OPTION 1: PostgreSQL (Railway default)
# Railway automatically provides DATABASE_URL - no need to set DB_URL manually!
# Format: postgresql://user:pass@host:port/dbname
# If using Railway PostgreSQL, just set these in Railway dashboard:
# DATABASE_URL=<provided by Railway>
#
# For local PostgreSQL development:
# DB_URL=jdbc:postgresql://localhost:5432/seatflix
# DB_USERNAME=postgres
# DB_PASSWORD=your_database_password
# DB_DIALECT=org.hibernate.dialect.PostgreSQLDialect
#
# OPTION 2: MySQL (for local development)
DB_URL=jdbc:mysql://localhost:3306/seatflix
DB_USERNAME=root
DB_PASSWORD=your_database_password
DB_DIALECT=org.hibernate.dialect.MySQLDialect

# JWT Configuration
# Generate a secure secret key (at least 32 characters)
# IMPORTANT: Use a strong random key in production!
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production-min-32-chars
JWT_EXPIRATION=86400000

# CORS Configuration
# Comma-separated list of allowed origins
# Add your Railway frontend URL here after deployment
ALLOWED_ORIGINS=http://localhost:5173,https://your-frontend-domain.com

# Optional: Development/Debug Settings (keep these disabled in production)
# SHOW_SQL=true
# FORMAT_SQL=true
# APP_LOG_LEVEL=DEBUG
